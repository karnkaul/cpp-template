{
	"version": 2,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 20,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "default",
			"displayName": "Default",
			"description": "Default build configuration using Ninja",
			"binaryDir": "out/default",
			"generator": "Ninja"
		},
		{
			"name": "ninja-db",
			"displayName": "Debug",
			"description": "Debug build using Ninja/clang",
			"generator": "Ninja",
			"binaryDir": "out/db",
			"cacheVariables": {
				"CMAKE_C_COMPILER": {
					"type": "STRING",
					"value": "clang"
				},
				"CMAKE_CXX_COMPILER": {
					"type": "STRING",
					"value": "clang++"
				},
				"CMAKE_BUILD_TYPE": {
					"type": "STRING",
					"value": "Debug"
				},
				"CMAKE_EXPORT_COMPILE_COMMANDS": {
					"type": "BOOL",
					"value": "ON"
				}
			}
		},
		{
			"name": "ninja-rw",
			"displayName": "RelW",
			"description": "RelW build using Ninja/clang",
			"generator": "Ninja",
			"binaryDir": "out/rw",
			"cacheVariables": {
				"CMAKE_C_COMPILER": {
					"type": "STRING",
					"value": "clang"
				},
				"CMAKE_CXX_COMPILER": {
					"type": "STRING",
					"value": "clang++"
				},
				"CMAKE_BUILD_TYPE": {
					"type": "STRING",
					"value": "RelWithDebInfo"
				}
			}
		},
		{
			"name": "ninja-rl",
			"displayName": "Release",
			"description": "Release build using Ninja/clang",
			"generator": "Ninja",
			"binaryDir": "out/rl",
			"cacheVariables": {
				"CMAKE_C_COMPILER": {
					"type": "STRING",
					"value": "clang"
				},
				"CMAKE_CXX_COMPILER": {
					"type": "STRING",
					"value": "clang++"
				},
				"CMAKE_BUILD_TYPE": {
					"type": "STRING",
					"value": "Release"
				}
			}
		},
		{
			"name": "make-rl",
			"displayName": "Release",
			"description": "Release build using Make",
			"generator": "Unix Makefiles",
			"binaryDir": "out/make_rl",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": {
					"type": "STRING",
					"value": "Release"
				}
			}
		}
	],
	"buildPresets": [
		{
			"name": "default",
			"configurePreset": "default"
		},
		{
			"name": "ninja-db",
			"configurePreset": "ninja-db"
		},
		{
			"name": "ninja-rl",
			"configurePreset": "ninja-rl"
		},
		{
			"name": "ninja-rw",
			"configurePreset": "ninja-rw"
		}
	]
}
